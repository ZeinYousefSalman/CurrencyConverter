@using CurrencyConverterClient

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ConvertRequest

@{
    ViewData["Title"] = "Home Page";
}

<form method="post" asp-action="ConvertString" >
    <div class="container border p-4">
        <div class="row text-center">
            <h1>Currency Converter</h1>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="NumberString" class="form-control" value="@TempData["oldValue"]" placeholder="Please Enter string" required/>
            </div>

            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <button type="submit" class="form-control btn btn-success" value="Submit">Convert</button>
            </div>
        </div>
    </div>
</form>

@if(TempData["result"] != null)
{
  <h3>@TempData["result"]</h3>
}